{
  "name": "localapi",
  "version": "0.8.0",
  "description": "A fully local, offline-capable API development tool",
  "main": "dist/main/main/index.js",
  "author": "LocalAPI Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload && npm run copy:assets",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "copy:assets": "node -e \"require('fs').copyFileSync('src/main/loading.html', 'dist/main/main/loading.html')\"",
    "icons:info": "node scripts/generate-icons.js",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "node scripts/run-security-tests.js",
    "test:e2e": "node scripts/run-security-tests.js --e2e",
    "test:unit": "node scripts/run-security-tests.js --unit",
    "test:integration": "node scripts/run-security-tests.js --integration",
    "fix:native": ".\\scripts\\rebuild-better-sqlite3.bat",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/client": "^3.14.0",
    "@asyncapi/parser": "^3.4.0",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@grpc/grpc-js": "^1.14.0",
    "@grpc/proto-loader": "^0.7.15",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "@mui/x-date-pickers": "^6.19.0",
    "@types/amqplib": "^0.10.7",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^5.0.3",
    "@types/mqtt": "^0.0.34",
    "@types/node-cron": "^3.0.11",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.9",
    "avsc": "^5.7.9",
    "axios": "^1.6.2",
    "body-parser": "^2.2.0",
    "chart.js": "^3.9.1",
    "chartjs-to-image": "^1.2.0",
    "cors": "^2.8.5",
    "cross-fetch": "^4.1.0",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "eventsource": "^2.0.2",
    "express": "^5.1.0",
    "fast-xml-parser": "^5.3.0",
    "fuzzball": "^2.1.2",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "json-server": "^0.17.4",
    "jsonpath": "^1.1.1",
    "monaco-editor": "^0.45.0",
    "mqtt": "^5.14.1",
    "node-cron": "^3.0.3",
    "node-gyp": "^11.5.0",
    "openapi-types": "^12.1.3",
    "papaparse": "^5.5.3",
    "pdfkit": "^0.14.0",
    "protobufjs": "^7.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^3.0.6",
    "simple-git": "^3.22.0",
    "soap": "^1.5.0",
    "swagger-parser": "^10.0.3",
    "swagger-ui-react": "^5.29.5",
    "ws": "^8.18.3",
    "xml-crypto": "^6.1.2",
    "xml-encryption": "^3.1.0",
    "keytar": "^7.9.0",
    "better-sqlite3": "^9.6.0",
    "xml2js": "^0.6.2"
  },
  "optionalDependencies": {
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/nock": "^10.0.3",
    "@types/node": "^20.10.6",
    "@types/papaparse": "^5.3.16",
    "@types/pdfkit": "^0.13.4",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/swagger-ui-react": "^4.18.3",
    "@types/tar": "^6.1.13",
    "@types/ws": "^8.18.1",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^25.0.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nock": "^14.0.10",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.localapi.app",
    "productName": "LocalAPI",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Development"
    }
  }
}
